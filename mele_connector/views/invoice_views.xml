<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mele_invoice_tree" model="ir.ui.view">
        <field name="name">mele.invoice.tree</field>
        <field name="model">mele.invoice</field>
        <field name="arch" type="xml">
            <tree string="Mele Invoices">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="external_reference"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="view_mele_invoice_form" model="ir.ui.view">
        <field name="name">mele.invoice.form</field>
        <field name="model">mele.invoice</field>
        <field name="arch" type="xml">
            <form string="Mele Invoice">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="amount_total"/>
                        <field name="external_reference"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
